<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Request Form Container -->
    <ScrollView
        android:id="@+id/requestFormContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:background="#F5F5F5">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <!-- Welcome Banner -->
            <TextView
                android:id="@+id/tvWelcomeStaff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome, Staff!"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#2196F3"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp" />

            <!-- Generate Request Card -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:padding="16dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Generate New Request"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_marginBottom="12dp" />

                <!-- Bill Category Spinner -->
                <Spinner
                    android:id="@+id/spinnerCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp" />

                <!-- Amount Field -->
                <EditText
                    android:id="@+id/edtAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Amount"
                    android:inputType="numberDecimal"
                    android:padding="12dp"
                    android:background="@android:drawable/edit_text"
                    android:layout_marginBottom="12dp" />

                <!-- Description Field -->
                <EditText
                    android:id="@+id/edtDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Description"
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:gravity="top"
                    android:padding="12dp"
                    android:background="@android:drawable/edit_text"
                    android:layout_marginBottom="12dp" />

                <!-- Upload Bill -->
                <Button
                    android:id="@+id/btnUploadBill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Upload Bill"
                    android:backgroundTint="#2196F3"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="12dp" />

                <!-- Selected file name -->
                <TextView
                    android:id="@+id/tvSelectedFileName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Selected file: "
                    android:visibility="gone"
                    android:layout_marginBottom="12dp" />

                <!-- Bill preview -->
                <ImageView
                    android:id="@+id/ivBillPreview"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:scaleType="fitCenter"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:layout_marginBottom="12dp" />

                <!-- Submit Request -->
                <Button
                    android:id="@+id/btnSubmitRequest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Submit Request"
                    android:backgroundTint="#4CAF50"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Fragment Container for View Requests -->
    <FrameLayout
        android:id="@+id/staffFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone" />

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/staffBottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/staff_bottom_nav" />

</LinearLayout>